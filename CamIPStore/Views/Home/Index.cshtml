
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@section Style{ }
<section class="section-slide" style="margin-top: -80px">
<div class="wrap-slick1">
    <div class="slick1">
        @foreach (var item in ViewBag.slider)
        {
        <div class="item-slick1" style="background-image: url(/Assets/User/images/slide-01.jpg);">
            <div class="container h-full">
                <div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
                    <div class="layer-slick1 animated visible-false" data-appear="fadeInDown" data-delay="0">
                        <span class="ltext-101 cl2 respon2 timeFormat" data-tungay="@item.TuNgay" data-denngay="@item.DenNgay">
                            
                        </span>
                    </div>

                    <div class="layer-slick1 animated visible-false" data-appear="fadeInUp" data-delay="800">
                        <h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1">
                            @item.TenKM
                        </h2>
                    </div>

                    <div class="layer-slick1 animated visible-false" data-appear="zoomIn" data-delay="1600">
                        <a href="product.html" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
                            Shop Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
        }
        </div>
    </div>
</section>
<div class="sec-banner bg0 p-t-80 p-b-50">
    <div class="container">
        <div class="row">
            @foreach (var item in ViewBag.banner)
            {
            <div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
                <div class="block1 wrap-pic-w">
                    <img src="http://placehold.it/500x500" alt="IMG-BANNER">
                    <a href="@Url.Action("Index", "PhanLoai", new { id = item.IdNSX })" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
                        <div class="block1-txt-child1 flex-col-l">
                            <span class="block1-name ltext-102 trans-04 p-b-8">
                                @item.TenNSX
                            </span>
                        </div>

                        <div class="block1-txt-child2 p-b-4 trans-05">
                            <div class="block1-link stext-101 cl0 trans-09">
                                Shop Now
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            }
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Đây là trang chủ</h1>
            <button onclick="alo()" class="btn btn-danger">alo</button>
        </div>
    </div>
</div>

@section Script{
    <script src="~/Assets/User/vendor/sweetalert/sweetalert.min.js"></script>
    <script>
        function alo() {
            swal("Hello world!");
        }
        function formatDate(val) {
            var arrDate = val.split('/');
            var date = new Date(arrDate[2].slice(0, 4), eval(arrDate[1]) - 1, arrDate[0]);
            return date.toLocaleDateString("vn");
        }
        $(".timeFormat").each(function() {
            var tuNgay = $(this).data("tungay");
            var denNgay = $(this).data("denngay"); 
            $(this).html(formatDate(tuNgay) + " - " + formatDate(denNgay));
        })
    </script>
}
